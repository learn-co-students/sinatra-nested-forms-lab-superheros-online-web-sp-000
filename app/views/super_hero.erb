    <input type="text" id="member1_power" name="team[heros][][power]">
    <label for="team[heros][][biography]">Hero's Biography</label>
    <input type="text" id="member1_bio" name="team[heros][][biography]">

  <h2>Hero 2</H2>

    <label for="team[heros][][name]">Hero's Name</label>
