<h1>Create a Team and Heroes!</h1>

<form method="post" action="/teams">
  <fieldset>
    <legend>Team and Heroes Information:</legend>
    Team's name:<br>
    <input type="text" name="team[name]">
    <br>
    Team's Motto:<br>
    <input type="text" name="team[motto]">
    <br>
    <h3>Hero 1</h3>
    Hero's Name:<br>
    <input id="member1_name" type="text" name="team[heroes][][name]">
    <br>
    Hero's Power:<br>
    <input id="member1_power" type="text" name="team[heroes][][power]">
    <br>
    Hero's Biography:<br>
    <input id="member1_bio" type="text" name="team[heroes][][biography]">
    <br>
    <h3>Hero 2</h3>
    Hero's Name:<br>
    <input id="member2_name" type="text" name="team[heroes][][name]">
    <br>
    Hero's Power:<br>
    <input id="member2_power" type="text" name="team[heroes][][power]">
    <br>
    Hero's Biography:<br>
    <input id="member2_bio" type="text" name="team[heroes][][biography]">
    <br>
    <br><br>
    <input type="submit" value="Submit">
  </fieldset>
</form>
