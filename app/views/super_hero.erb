  <h2>Hero 3</H2>

    <label for="team[heros][][name]">Hero's Name</label>
    <input type="text" id="member3_name" name="team[heros][][name]">
    <label for="team[heros][][power]">Hero's Power</label>
    <input type="text" id="member3_power" name="team[heros][][power]">
    <label for="team[heros][][biography]">Hero's Biography</label>
    <input type="text" id="member3_bio" name="team[heros][][biography]">
