</div><br>

<% @heroes.each.with_index do |hero, index| %>
    <div class="hero_1">
    <% if index == 0 %>
        <h2>Hero Name: <%= hero.name %></h2>
        <p>Hero Power: <%= hero.power %></p>
        <p>Hero Biography: <%= hero.bio %></p>
    <% end %>
<% end %>
</div><br>

